<div>
    <div class="row justify-content-center show-card-product">

      <div class="col-4">
        <%= link_to products_path(query: params[:query]), class:"previous" do %>
          <i class="fa-solid fa-arrow-left" style="color: #FFFFFF;"></i>
        <% end %>
        <% if @product.photo.attached?%>
          <%= cl_image_tag(@product.photo.key, class: "card-image", width: 80, height: 80, crop: :fill) %>
        <% end %>
        <%= button_to product_purchases_path(@product), method: :create, remote: true, id: "buy-button", class: "pay" do %>
          <i class="fa-solid fa-cart-shopping"></i>
        <% end %>
      </div>

      <div class="col-8">
        <h6><%= @product.description %></h6>
        <h6><%= @product.business.name %></p>
      </div>
    </div>

    <div class="row justify-content-center">
      <i class="fa-regular fa-calendar-check" style="margin-right: 5px;"></i>
      <p><%= @product.deadline.strftime("%d/%m/%Y")%></p>
      <i class="fa-solid fa-leaf" style="margin-right: 5px;"></i>
      <p style="margin-right: 5px;"><%= @product.co2e %></p>
      <p> CO2e / kg </p>
      <p><%= @product.business.address %></p>
    </div>

    <div class="row justify-content-center">
          <div style="width: 100%; height: 200px;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>

</div>
