<div class="orders-container">

  <div class="orders-title">
    <h3>I miei ordini</h3>

    <% if @orders.size == 0 %>
    <p> Al momento non ci sono ordini.</p>
    <% else %>
      <div class="order-card" id="orders-header">
      <p class="order-field">Ordine</p>
      <p class="order-field">Data</p>
      <p class="order-field">CO2e</p>
    </div>

    <% @orders.each do |order| %>
      <% if order.state == "done" %>
      <div class="order-card">
        <div class="order-field">
          <h6><%= link_to "View details", order_path(order) %></h6>
        </div>
        <div class="order-field">
          <p><%= order.created_at.strftime("%B %d, %Y") %></p>
        </div>
        <div class="order-field">
          <p><%= order.total_co2e.round(2) %></p>
        </div>
      </div>
      <% end %>
    <% end %>

  <% end %>
  </div>

</div>
