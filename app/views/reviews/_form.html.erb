<%= simple_form_for [@product, @product.reviews.build] do |f| %>
  <%# <div id="rating-form">
    <%= f.input :rating %>
  <%# </div> %>
  <%= f.input :rating, collection: (1..5).to_a, label: "Valuta", input_html: {data: {controller: "star-rating"}} %>
  <%= f.input :content, label: "Aggiungi una recensione" %>
  <%= f.submit "Conferma", class: "btn"%>
<% end %>


<script>
  $('#rating-form').raty({
    path: '/assets/'
    scoreName: 'review[rating]'
  });
</script>
